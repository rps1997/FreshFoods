@model IEnumerable<Category>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <h2>
                    Create New Category
                </h2>
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
            <td>
                @obj.name
            </td>
            <td>
                @obj.DisplayOrder
            </td>
            <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit</a>
            </td>
            <td>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary btn-danger">Delete</a>
            </td>
            </tr>
        }
    </tbody>
</table>